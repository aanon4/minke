{
  name: `Radarr`,
  description: `Movies downloader for newsgroup and bittorrent users`,
  image: `linuxserver/radarr`,
  tags: [
    `Media`
  ],
  actions: [
    {
      type: `NavButton`,
      name: `Transmission`,
      url: `http://{{__HOMEIP}}:9091/`
    },
    {
      type: `NavButton`,
      name: `NZBGet`,
      url: `http://{{__HOMEIP}}:6789/`
    },
    {
      type: `Text`,
      text: `<a href="https://radarr.video/">Radarr</a> simplifies finding and downloading Movies.
This application is bundled with the <a href="https://transmissionbt.com/">Transmission</a> bit torrent client and the <a href="https://nzbget.net/">NZBGet</a> Usenet client.`
    },
    {
      type: `Header`,
      title: `Movies`
    },
    {
      type: `SelectDirectory`,
      name: `/movies`,
      description: `Select the folder where we save your Movies`
    },
    {
      type: `Header`,
      title: `Configure Client`
    },
    {
      type: `Text`,
      text: `You can configure the Transmission client <a href="http://{{__HOSTNAME}}.{{__DOMAINNAME}}:9091/" target="_blank">here</a>.`
    },
    {
      type: `Text`,
      text: `You can configure the NZBGet client <a href="http://{{__HOSTNAME}}.{{__DOMAINNAME}}:6789/" target="_blank">here</a> (login: nzbget, password: tegbzn6789).`
    },
    {
      type: `Header`,
      title: `Network`
    },
    {
      type: `Text`,
      text: `Select the network to use for downloading content. By default this is your <b>home</b> network,
but you may want to use a VPN network for extra security and privacy.`
    },
    {
      type: `SelectNetwork`,
      name: `primary`,
      description: `Select BitTorrent network`
    }
  ],
  properties: [
    {
      type: `Directory`,
      name: `/config`,
      style: `boot`,
      backup: true
    },
    {
      type: `Directory`,
      name: `/downloads`,
      style: `store`,
      shares: [
        {
          name: `/`,
          description: `Downloads`
        }
      ]
    },
    {
      type: `Directory`,
      name: `/movies`,
      style: `store`
    },
    {
      type: `Environment`,
      name: `HOME`,
      defaultValue: `/root`
    },
    {
      type: `Port`,
      name: `7878/tcp`,
      port: 7878,
      protocol: `TCP`,
      web: {
        type: `newtab`,
        path: `/`
      }
    },
    {
      type: `Network`,
      name: `primary`,
      defaultValue: `home`
    },
    {
      type: `Network`,
      name: `secondary`,
      defaultValue: `home`
    }
  ],
  secondary: [
    {
      image: `linuxserver/transmission`,
      delay: 0,
      properties: [
        {
          type: `Directory`,
          name: `/config`,
          style: `boot`,
          backup: true
        },
        {
          type: `Directory`,
          name: `/downloads`,
          style: `parent`
        }
      ]
    },
    {
      image: `linuxserver/nzbget`,
      delay: 0,
      properties: [
        {
          type: `Directory`,
          name: `/config`,
          style: `boot`,
          backup: true
        },
        {
          type: `Directory`,
          name: `/downloads`,
          style: `parent`
        }
      ]
    }
  ]
}
