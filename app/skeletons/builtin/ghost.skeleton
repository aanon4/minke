{
  name: `Blog`,
  description: `Blogging using the Ghost publishing platform`,
  images: {
    x64: `ghost:alpine`
  },
  tags: [
    `Blog`,
    `Web`
  ],
  actions: [
    {
      type: `Header`,
      title: `Configuration`
    },
    {
      type: `Environment`,
      name: `url`,
      description: `Base URL of this blog`
    }
  ],
  properties: [
    {
      type: `Environment`,
      name: `url`
    },
    {
      type: `Directory`,
      name: `/var/lib/ghost/content`,
      style: `store`,
      shares: [
        {
          name: `/`,
          description: `Blog`
        }
      ]
    },
    {
      type: `Port`,
      name: `2368/tcp`,
      port: 2368,
      protocol: `TCP`,
      nat: false,
      web: {
        type: `url`,
        url: `{{url}}`
      },
      dns: false,
      mdns: null
    },
    {
      type: `Network`,
      name: `primary`,
      defaultValue: `home`
    }
  ]
}
